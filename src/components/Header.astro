<header>
  <nav>
    <div class="nav-logo">
      <a href="#home-container">&lt;\Henrique&gt;</a>
    </div>
    
    <div class="menu-toggle" id="menuToggle">
      <span></span>
      <span></span>
      <span></span>
    </div>
    
    <ul id="navMenu">
      <li><a href="#home-container">Inicio</a></li>
      <li><a href="#about-me-container">Sobre</a></li>
      <li><a href="#skill-container">Habilidades</a></li>
      <li><a href="#portfolio-container">Portfolio</a></li>
      <li><a href="#contact-container">Contato</a></li>
    </ul>
  </nav>
</header>

<script>
 
  const menuToggle = document.getElementById("menuToggle");
  const navMenu = document.getElementById("navMenu");
  
 
  if (menuToggle && navMenu) {
    const navLinks = navMenu.querySelectorAll("a");

    menuToggle.addEventListener("click", () => {
      menuToggle.classList.toggle("active");
      navMenu.classList.toggle("active");
    });

    navLinks.forEach((link) => {
      link.addEventListener("click", () => {
        menuToggle.classList.remove("active");
        navMenu.classList.remove("active");
      });
    });

    document.addEventListener("click", (e) => {
      if (e.target instanceof Element && !menuToggle.contains(e.target) && !navMenu.contains(e.target)) {
        menuToggle.classList.remove("active");
        navMenu.classList.remove("active");
      }
    });
  }
</script>